<div class="bar">
    <a href="/" target="_parent"><div class="top-logo">WhoQuote</div></a>
	<div class="gh"><i class="fa fa-github"></i></div>
</div>

<div class="wrapper">
	{{!-- <h4 class="cat-title">Categories</h4> --}}
	{{#each vm.categories}}		
		<form action="/game" method="post">
			<input type="hidden" name="category" value="{{slug}}"/>
			<input type="hidden" name="user" value="testUser"/>
			{{!-- <input type="submit" class="btn btn-default"> --}}
			<section id="{{slug}}" class="parallax" style="background-image: url(/images/{{slug}}.jpg)" onClick="javascript:this.parentNode.submit();">
			  <div class="mod-container">
			    <h1>{{name}}</h1>
			  </div>
			</section>
		</form>
	{{/each}}
</div>

